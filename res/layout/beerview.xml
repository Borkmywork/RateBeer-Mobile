<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	>
 	<TableLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingBottom="15dip"
		>
		<TableRow>
	        <TextView
	        	android:id="@+id/beerview_value_beername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:textSize="20sp"
				android:gravity="center_horizontal"
                />
		</TableRow>
		<TableRow>
	        <TextView
	        	android:id="@+id/beerview_value_brewer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:textSize="14sp"
                />
		</TableRow>
		<TableRow>
	        <TextView
	        	android:id="@+id/beerview_value_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:textSize="14sp"
                />
		</TableRow>
	</TableLayout>
  	<LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		>
  	  	<TableLayout
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:paddingBottom="15dip"
			>
			<TableRow>
	        	<TextView
	        		android:id="@+id/beerview_label_ratings"
	                android:text="@string/view_ratings"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
					android:paddingLeft="10px"
	                />
		        <TextView
		        	android:id="@+id/beerview_label_overallpctl"
	                android:text="@string/view_overallpctl"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
					android:paddingLeft="10px"
	                />
		        <TextView
		        	android:id="@+id/beerview_label_abv"
	                android:text="@string/view_abv"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
					android:paddingLeft="10px"
	                />
			</TableRow>  	
			<TableRow>
		        <TextView
		        	android:id="@+id/beerview_value_ratings"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
					android:paddingLeft="10px"
	                />
		        <TextView
		        	android:id="@+id/beerview_value_overallpctl"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
	                />
		        <TextView
		        	android:id="@+id/beerview_value_abv"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
					android:textSize="12sp"
					android:gravity="center_horizontal"
	                />
			</TableRow>  	
		</TableLayout>
	</LinearLayout>
	<Button
		android:id="@+id/viewRateButton"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="@string/view_rate_button"
		/>	
		<ListView
			android:id="@android:id/list"
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			android:divider="#99ffffff"
			android:dividerHeight="1px"
			android:clickable="false"
			android:longClickable="false"
			android:drawSelectorOnTop="false"
			android:choiceMode="none"
			android:listSelector="@android:color/transparent"
			/>  
</LinearLayout>
