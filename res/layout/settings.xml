<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<TableLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:height="0dip"
		android:layout_weight="1">
		<TableRow>
	        <TextView android:id="@+id/settings_label_username"
                android:text="@string/settings_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10px"
                android:textSize="15sp" />
	        <EditText android:id="@+id/settings_value_username"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true" />
		</TableRow>
		<TableRow>
	        <TextView android:id="@+id/settings_label_password"
                android:text="@string/settings_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10px"
                android:textSize="15sp" />
	        <EditText android:id="@+id/settings_value_password"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:password="true"
                android:singleLine="true" />
		</TableRow>
		<TableRow>
			<CheckBox 
				android:id="@+id/settings_checkbox_beermail_notification"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_span="2"
				android:text="@string/settings_beermail_notification"
				/>
		</TableRow>
		<TableRow>
	        <TextView 
	        	android:id="@+id/settings_label_notification_interval"
		        android:text="@string/settings_notification_interval_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:paddingRight="10px"
	            android:textSize="15sp" 
	            />
			<Spinner
			   	android:id="@+id/settings_notification_interval"
			   	android:entries="@array/notification_interval"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			   	/>
		</TableRow>
	</TableLayout>
    <Button android:id="@+id/settings_button_save"
        android:text="@string/settings_save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>